{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2015",
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "outDir": "lib/cjs"
  },
  "include": ["src/", "examples/"],
  "exclude": ["node_modules"]
}
